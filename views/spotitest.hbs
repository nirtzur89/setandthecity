<div class="bodyPers container-fluid w-100 h-100 d-flex bd-highlight mb-3 justify-content-start align-items-around flex-column">
  <div class="headerPersonal container-fluid align-items-start flex-row flex-wrap">
    <div class="welcome">
      <div>
        <img id="logoWhite" src="./images/logoWhite.jpg" alt="LOGO" width="300px" height="300px">
      </div>
      <div>
        <h1 class="letsBoogie">Let's boogie</h1>
      </div>
      <div class="userInfo">
        <div class="userImage">
          <img id="userPhoto" class="img-circle" src="{{userImage.url}}" onerror="this.src='./images/white.jpg'">
        </div>
        <div class="userImage">{{userName}}</div>
      </div>
    </div>
  </div>

  <hr class="line">

  <div class="mainPersonal container-fluid flex-row align-items-stretch justify-content-around flex-wrap w-100 text-center">
    <div class="row">
      <div class="persInfo col-md-3">
        <div class="headerP headerArtists">
          <p class="regularFont font-weight-bold">5S YOU FOLLOW</p>
        </div>

        <div class="artistList list">
          <ul>{{#each artistImage}}
            <li>
              <div class="artistPicture">
                <img id="artistIMG" class="img-circle hoverImage" src="{{this.[0].url}}">
                <div class="middle">
                  {{#each followedArtistName}}
                  <div class="randomFollows">{{this.[0]}}</div>
                  {{/each}}
                </div>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
        {{!-- <li>{{this.name}}</li> --}}

      </div>


      {{!-- newsfeed Header --}}
      <div class="newsfeed">
        <div class="headerP headerTracks">
          <p class="regularFont font-weight-bold">YOUR TRACKS</p>
        </div>
        <div id="newsfeedList" class="table-responsive table-wrapper-scroll-y newsfeed_list font-weight-bold flex-column align-items-start justify-content-center"
          role="application" aria-label="media player">
          <table style="width:100%" class="table table-sm table-hover table-dark">
            <thead>
            </thead>

            <tbody>
              {{#each relatedTop}}
              <tr>
                <td><img id="albumIMG" class="img-circle" src="{{this.image}}"></td>
                <td><a href="https://open.spotify.com/artist/{{this.artistPageLink}}" target="_blank">{{this.artist}}</a></td>
                <td><a href="https://open.spotify.com/track/{{this.link}}" target="_blank">{{this.track}}</a></td>
                <td><a href="{{this.preview}}" target="_blank">
                    <div class="jp-controls-holder ml-auto">
                      <button type="button" id="buttonPlay" class="jp-play" onclick="buttonPlayPress()">
                        <i class="fas fa-angle-right" sytle="color: white"></i>
                      </button>
                    </div>
                  </a></td>
              </tr>
              {{/each}}
            </tbody>

          </table>




          <div class="jp-progress">
            <div class="jp-seek-bar"></div>
          </div>


        </div>



      </div>

      <div class="artistInfo col-xs-6 col-md-3 text-center">
        <div class="headerP headerRelated">
          <p class="regularFont font-weight-bold">ARTISTS MATCHING</p>
        </div>
        <div class="list">
          <ul>{{#each relatedArtistsImage}}
            <li>
              <div class="artistPicture">
                <img id="relatedArtistsIMG" class="img-circle" src="{{this.[0].[0].url}}">
                <img id="relatedArtistsIMG" class="img-circle" src="{{this.[1].[0].url}}">
                <img id="relatedArtistsIMG" class="img-circle" src="{{this.[2].[0].url}}">
                <img id="relatedArtistsIMG" class="img-circle" src="{{this.[3].[0].url}}">
              </div>
            </li>
            {{/each}}
          </ul>

          {{!-- <ul>{{#each relatedArtists}}
            {{#each this}}
            <li>{{this}}</li>
            {{/each}}
            {{/each}}</ul> --}}
        </div>

      </div>

    </div>

  </div>
  <div class="refresh">
    <a href="/personal"><button type="button" id="refreshButton">DISCOVER MORE</button></a>
    <a href="/"><button type="button" id="logoutButton">LOGOUT</button></a>
  </div>
</div>




