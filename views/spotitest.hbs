<div class="bodyPers w-100 d-flex bd-highlight mb-3 justify-content-start align-items-around flex-column">
  <div class="headerPersonal align-items-start flex-row flex-wrap">
    <div class="row">
      <div class="welcome">
        <h1>welcome to your personal page - {{userName}}</h1>
      </div>
      <div class="userId text-center">
        <p>your id is -{{id}}</p>
      </div>
    </div>
  </div>
  <div class="mainPersonal container-fluid align-items-stretch justify-content-around flex-wrap w-100 text-center">
    <div class="row">
      <div class="persInfo order-xs-2 col-xs-6 col-md-3">
        <p class="font-weight-bold">you are following -</p>

        <div class="artistList">
          <ul>{{#each artistImage}}
            <li>
              <div class="artistPicture">
                <img id="artistIMG" src="{{this.[0].url}}">
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
        {{!-- <li>{{this.name}}</li> --}}

      </div>
      <div class="newsfeed order-xs-1 col-xs-12 col-md-6 font-weight-bold text-center">NEWSFEED
        <p class="tracks">
          <ul>{{#each allTopTracks}}
            <li>{{this.body}}</li>
            {{/each}}</ul>
        </p>

      </div>
      <div class="artistInfo col-xs-6 col-md-3 text-center">
        <p class="font-weight-bold">artists you might like -
          <ul>{{#each relatedArtists}}
            {{#each this}}
            <li>{{this}}</li>
            {{/each}}
            {{/each}}</ul>
        </p>
      </div>
    </div>
  </div>

</div>


